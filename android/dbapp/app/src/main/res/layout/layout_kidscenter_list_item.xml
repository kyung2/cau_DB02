<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/cv_kidscenter_list_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="10">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_kidscenter_list_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center|start"
                android:text="키즈센터리스트"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_kidscenter_list_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="키즈카페주소는서울시양천구신정동"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/bt_kidscenter_list_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"

            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:background="@color/white"
            app:srcCompat="@drawable/call_icon" />

    </LinearLayout>

</android.support.v7.widget.CardView>