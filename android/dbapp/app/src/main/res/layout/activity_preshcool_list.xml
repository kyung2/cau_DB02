<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/wrapper_detailPreSchool_siDo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/et_detail_preschool_si_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="시"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/wrapper_detailPreSchool_siGoonGoo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/et_detail_preschool_sigungu_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="시군구"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/bt_pre_list_search"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_search"
            android:scaleType="centerInside"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.24" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_preschools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager" />
</LinearLayout>