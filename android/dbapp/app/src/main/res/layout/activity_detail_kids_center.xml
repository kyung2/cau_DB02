<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eom.dbapp.DetailActivity.DetailKidsCenterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/orange_square"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_kids_center_big_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange" />


                <!--Table info start!!! -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="키즈센터이름" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="전화번호" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="주소" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="시/도" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_si_do"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="시/군/구" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_si_gun_gu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="우편번호" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_postcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="위도" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="경도" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/grayback_square"
                        android:text="정원" />

                    <TextView
                        android:id="@+id/tv_detail_kids_center_capacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        
                        android:background="@drawable/gray_square" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
