<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eom.dbapp.DetailActivity.DetailPreSchoolActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/orange_square"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_pre_school_big_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                      
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange" />


                <!--Table info start!!! -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="유치원이름" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="설립유형" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="설립(개원) 일" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_permit_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="휴지 시작날짜" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_pause_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="휴지 종료날짜" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_pause_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="폐업날짜" />


                    <TextView
                        android:id="@+id/tv_detail_pre_school_close_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="우편번호" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_postcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="시/도" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_si_do"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="시/군/구" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_si_gun_gu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="주소" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="위도"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_latitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/gray_square"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="경도" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_longitude"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="운영 상태" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_operation_state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="전화번호" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="팩스 번호" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_fax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="용량" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_capacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="버스 운영여부" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_shcool_bus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="놀이터 수" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_playground_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="보육실 수" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_nursing_room_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"

                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="보육실 면적" />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_nursing_room_area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="화재보험가입여부" />
                    <!--1이면 가입 0이면 ㄴㄴ -->
                    <TextView
                        android:id="@+id/tv_detail_pre_school_assess_certification_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/grayback_square"
                        android:text="CCTV 수 " />

                    <TextView
                        android:id="@+id/tv_detail_pre_school_NumofCCTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      
                        android:background="@drawable/gray_square" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
