<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eom.dbapp.DetailActivity.DetailKidsCafeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/orange_square"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_big_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="XX유치원"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange" />

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square"
                        android:text="키즈카페이름" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_permit_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square"
                        android:text="설립(개원) 일" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_permit_date_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square"
                        android:text="우편번호" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_postcode_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_si_do"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="시/도"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_si_do_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_si_gun_gu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="시/군/구"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_si_gun_gu_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="주소"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_address_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_operation_state"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                     android:text="운영상태"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_operation_state_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_multiple_use"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="다중이용업소여부"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_mutiple_use_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_facility_size"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                 android:text="총시설규모"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_facility_size_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_hygiene_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                       android:text="위생상태"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_hygiene_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="경도"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_longitude_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:text="위도"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_latitude_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
