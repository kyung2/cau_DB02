<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eom.dbapp.DetailKidsCafeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        z

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/wrapper_detailPreSchool_topBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/chiYakSaek">

                <ImageButton
                    android:id="@+id/btn_detailKidSchool_home"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="유치원 알리미"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/wrapper_detailPreSchool_siDo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_kidcafe_si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시/도"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_detail_kidcafe_si_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입력 시"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/wrapper_detailPreSchool_siGoonGoo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_detail_kidcafe_sigungu"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시/군/구"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_detail_kidcafe_sigungu_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입력시군구"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:id="@+id/wrapper_detailPreSchool_sulLip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="설립유형"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="입력"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@color/whiteGray"
                android:text="키즈카페이름 "
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/whiteGray" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/whiteGray"
                    android:text="기본현황" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/whiteGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/orange_square"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="XX유치원"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/orange" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기본 현황"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(자료 기준일 어쩌고 저쩌고)"
                        android:textColor="@color/gray"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_name"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_permit_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_permit_date"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_permit_date_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_postcode"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_postcode_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_si_do"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_si_do"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe__si_do_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_si_gun_gu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_si_gun_gu"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_si_gun_gu_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_address"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_address_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_operation_state"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_operation_state"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_operation_state_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_mutiple_use"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_mutiple_use"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_mutiple_use_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_facility_size"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_facility_size"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_facility_size_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_hygiene_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_hygiene_name"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_hygiene_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_longitude"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_longitude_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_kidcafe_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_latitude"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/grayback_square" />

                    <TextView
                        android:id="@+id/tv_detail_kidcafe_latitude_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gray_square" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
